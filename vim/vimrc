vim9script
# 使用新版vim脚本

# 禁用vi兼容
set nocompatible

if has('multi_byte')
    # 内部工作编码
    set encoding=utf-8
    # 文件默认编码
    set fileencoding=utf-8
    # 打开文件时自动尝试下面顺序的编码
    set fileencodings=ucs-bom,utf-8,gbk,gb18030,big5,euc-jp,latin1
endif

# 默认使用英语
language en_US.UTF-8


def JoinPath(path: list<string>): string
    var sep = "\\"
    var result = ""
    var i = 0
    while i < len(path)
        if i != 0
            result = result .. sep
        endif
        result = result .. path[i]
        i += 1
    endwhile
    return result
enddef

# const path_of_pack = JoinPath(["~", "vimfiles", "pack"])

# 看上去不需要packpath
# set packpath+=path_of_pack

set number
syntax on
# 高亮显示第80列
set colorcolumn=80

# 统一四字符缩进
const indent = 4
&tabstop = indent
&shiftwidth = indent
set expandtab
# 自动缩进
set autoindent
# 智能缩进
set smartindent
# 高亮匹配的括号
# set showmatch
# 高亮当前行
# set cursorline
# 根据文件类型自动设置缩进
if has('autocmd')
    filetype plugin indent on
endif

# 智能判断大小写
set smartcase
# 高亮搜索内容
set hlsearch


if has("win32") && has("gui_running")
    packadd wincap
    g:wincap_plugin_exe = $HOME ..
        \ "/vimfiles/pack/default/opt/wincap/bin/wincap.exe"
endif

if has("clipboard")
    # 一律使用系统剪贴板
    set clipboard^=unnamed,unnamedplus
endif

if has("gui_running")
    set background=light
    packadd everforest
    g:everforest_background = 'soft'
    g:everforest_better_performance = 1
    g:everforest_disable_italic_comment = 1
    colorscheme everforest
    # 去掉不需要的菜单栏工具栏滚动条
    set guioptions=
    # 关闭光标闪烁
    set guicursor+=a:blinkon0
    # 设置GUI字体
    set guifont=等距更纱黑体\ SC:h11
    # 设置窗口大小，lines是有多少行
    set lines=50 columns=100

    packadd coc
    # CocInstall coc-pyright
    # pip install pyright
    # 使用回车键确认选择
    inoremap <silent><expr> <CR> coc#pum#visible() ? coc#pum#confirm()
         \ : "\<C-g>u\<CR>\<c-r>=coc#on_enter()\<CR>"
endif
if has("gui_running")
    # 启用lightline
    set laststatus=2
    # 关闭自带的模式显示，有lightline后不需要了
    set noshowmode
    g:lightline = {"colorscheme": "everforest"}
endif
